<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5f5a4"
    tools:context=".TestName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack_id"
            android:src="@drawable/ic_baseline_navigate_before_24"
            android:background="@null"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#4c4c4c"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Introduceți numele testului și clasa"
            android:fontFamily="@font/ml"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/testName_id"
            android:inputType="text"
            android:fontFamily="@font/mm"
            android:background="@drawable/background_text_form"
            android:paddingLeft="12dp"
            android:hint="Numele Testului"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <EditText
            android:id="@+id/className_id"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:fontFamily="@font/mm"
            android:background="@drawable/background_text_form"
            android:paddingLeft="12dp"
            android:hint="Clasa"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/validateTestName_id"
        android:background="@drawable/background_button_login"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Validează"
        android:textAllCaps="false"
        android:fontFamily="@font/mm"
        android:textSize="22sp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewHome"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_menu" />

</RelativeLayout>