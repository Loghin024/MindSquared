<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_background"
    tools:context=".CreateAccount">

    <TextView
        android:id="@+id/CreateAccount_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Crează un cont nou"
        android:textColor="@color/white"
        android:fontFamily="@font/mm"
        android:textSize="30sp"
        android:gravity="center"
         />

    <EditText
        android:id="@+id/editTextlastname"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="50dp"
        android:fontFamily="@font/ml"
        android:paddingLeft="12dp"
        android:background="@drawable/background_text_auth"
        android:inputType="textPersonName"
        android:hint="Introduceți Numele" />

    <EditText
        android:id="@+id/editTextfirstname"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="50dp"
        android:fontFamily="@font/ml"
        android:paddingLeft="12dp"
        android:background="@drawable/background_text_auth"
        android:inputType="textPersonName"
        android:hint="Introduceți Prenumele" />

    <EditText
        android:id="@+id/create_account_email"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="50dp"
        android:fontFamily="@font/ml"
        android:paddingLeft="12dp"
        android:background="@drawable/background_text_auth"
        android:hint="Introduceți adresa de email"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/password1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="50dp"
        android:fontFamily="@font/ml"
        android:paddingLeft="12dp"
        android:background="@drawable/background_text_auth"
        android:inputType="textPassword"
        android:hint="Alegeți o parolă" />


    <EditText
        android:id="@+id/password2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="50dp"
        android:fontFamily="@font/ml"
        android:paddingLeft="12dp"
        android:background="@drawable/background_text_auth"
        android:inputType="textPassword"
        android:hint="Confirmați parola" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectați tipul de profil"
        android:textColor="@color/white"
        android:fontFamily="@font/mm"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:gravity="center"
        />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_marginTop="15dp"
        android:layout_width="126dp"
        android:layout_height="31dp"
        android:entries="@array/account_type" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Crează contul"
        android:background="@drawable/background_button_create_account"
         />

