<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditQuestion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f4f4"
            >

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/gradient_recycler"
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnBack_id"
                        android:src="@drawable/ic_baseline_navigate_before_24"
                        android:background="@null"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="#4c4c4c"/>

                    <TextView
                        android:layout_marginLeft="-50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="28dp"
                        android:textSize="26sp"
                        android:textColor="#FFF"
                        android:fontFamily="@font/mm"
                        android:text="Editează întrebarea"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bt_item_formular"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-410dp"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Adaugă întrebarea"
                        android:fontFamily="@font/ml"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editTitleQuestion_id"
                        android:inputType="text"
                        android:fontFamily="@font/mm"
                        android:background="@drawable/background_text_form"
                        android:paddingLeft="12dp"
                        android:hint="Introdu aici întrebarea ta"
                        android:textColorHint="#B5B5B5"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Varianta de răspuns:  A"
                        android:fontFamily="@font/ml"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editAnswer_A_id"
                        android:inputType="text"
                        android:fontFamily="@font/mm"
                        android:maxLength="25"
                        android:background="@drawable/background_text_form"
                        android:paddingLeft="12dp"
                        android:hint="Introdu aici varianta de răspuns A"
                        android:textColorHint="#B5B5B5"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Varianta de răspuns:  B"
                        android:fontFamily="@font/ml"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editAnswer_B_id"
                        android:inputType="text"
                        android:fontFamily="@font/mm"
                        android:background="@drawable/background_text_form"
                        android:paddingLeft="12dp"
                        android:hint="Introdu aici varianta de răspuns:  B"
                        android:textColorHint="#B5B5B5"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Varianta de răspuns:  C"
                        android:fontFamily="@font/ml"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editAnswer_C_id"
                        android:inputType="text"
                        android:fontFamily="@font/mm"
                        android:background="@drawable/background_text_form"
                        android:paddingLeft="12dp"
                        android:hint="Introdu aici varianta de răspuns:  C"
                        android:textColorHint="#B5B5B5"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Varianta de răspuns:  D"
                        android:fontFamily="@font/ml"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editAnswer_D_id"
                        android:inputType="text"
                        android:fontFamily="@font/mm"
                        android:background="@drawable/background_text_form"
                        android:paddingLeft="12dp"
                        android:hint="Introdu aici varianta de răspuns:  D"
                        android:textColorHint="#B5B5B5"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Varianta de răspuns corectă"
                        android:fontFamily="@font/ml"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/spinner_id"
                        android:layout_marginBottom="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnSaveUpdateQuestion"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="Save Update"
                android:fontFamily="@font/mm"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:background="@drawable/bgbtncreate"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <Button
                android:id="@+id/btnDeleteQuestion"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="55dp"
                android:text="Delete"
                android:fontFamily="@font/ml"
                android:textColor="#AFAFAF"
                android:textAllCaps="false"
                android:background="@drawable/bgbtncancel"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />


        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewHome"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_menu" />

</RelativeLayout>