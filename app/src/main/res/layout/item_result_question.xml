<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bgitemtest"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/questionTitle_id"
            android:layout_marginTop="19dp"
            android:textSize="22sp"
            android:textColor="#191919"
            android:text="cel mai mic numar?"
            android:fontFamily="@font/ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="Răspunsul utilizatorului:"
                android:fontFamily="@font/ml"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/user_answer_id"
                android:textSize="27sp"
                android:fontFamily="@font/mm"
                android:textColor="@color/greenBlue"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Răspunsul Corect:"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/answer_correct_id"
            android:textSize="27sp"
            android:fontFamily="@font/mm"
            android:textColor="@color/greenLight"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:text="D"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>